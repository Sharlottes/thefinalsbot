{
  "jsc": {
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "jsx": true,
      "decorators": true,
      "dynamicImport": true,
      "importMeta": true,
      "topLevelAwait": true,
      "externalHelpers": true
    },
    "transform": {
      "react": {
        "runtime": "automatic",
        "pragma": "React.createElement"
      },
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "module": {
    "type": "es6"
  },
  "isModule": true
}
